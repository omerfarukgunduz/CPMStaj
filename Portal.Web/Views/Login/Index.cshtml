@model HomeIndexViewModel
@{
    Layout = "_EmptyLayout";
}

<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>CPM Planlı Paylaşım Sistemi</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/ionicons/2.0.1/css/ionicons.min.css">
    <link rel="stylesheet" href="~/assets/css/style.bundle.css">
    <link href="~/assets/plugins/global/plugins.bundle.css" rel="stylesheet" />



</head>

<body id="background-containergiris">
    <div class="login-dark" style="margin-top:5%;">
        <form method="post">
            <h2 class="sr-only">Login Form</h2>
            <div class="illustration"><i class="icon ion-ios-locked-outline"></i></div>
            <div class="form-group" id="username"> @Html.TextBoxFor(elm=>elm.UserName, new {@class = "form-control", @type="text", @placeholder="Kullanıcı Adı", @value = Model?.UserName}) </div>
            <div class="form-group my-4" id="password">@Html.TextBoxFor(elm=>elm.Password, new {@class = "form-control", @type="password", @placeholder="Şifre", @value = Model?.Password}) </div>
            @if (Model?.HasError == true)
            {
                <div class="error my-4">@Model.Error</div>
                <script>
                     
                     document.getElementById("password").querySelector("input").value = "";
           
                </Script>
                
            }
            <div class="form-group"><button class="btn btn-primary btn-block" type="submit">Giriş Yap</button></div>
            <br />
            <div class="form-group"><h4 style="color:white; text-align:center; font-family:'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans', Arial, sans-serif; ">CPM Planlı Paylaşım Sistemi </h4></div>


        </form>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/js/bootstrap.bundle.min.js"></script>
    <script src="~/assets/plugins/global/plugins.bundle.js"></script>


</body>

</html>




